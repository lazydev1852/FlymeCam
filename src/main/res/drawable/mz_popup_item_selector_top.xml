    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/mz_popup_item_radius" android:topRightRadius="@dimen/mz_popup_item_radius" android:bottomLeftRadius="0dp" android:bottomRightRadius="0dp"/>
            <solid android:color="@color/mz_popup_item_normal"/>
        </shape>
    </item>
</selector>
