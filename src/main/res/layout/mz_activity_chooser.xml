<?xml version="1.0" encoding="utf-8"?>
<com.meizu.share.widget.NestedScrollingLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/chooser_nested_scrolling_layout" android:paddingBottom="@dimen/chooser_dialog_margin_bottom" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/chooser_header_container" android:paddingLeft="24dp" android:paddingTop="24dp" android:paddingRight="24dp" android:paddingBottom="21dp" android:layout_width="@dimen/chooser_dialog_width" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:gravity="center" android:id="@+id/chooser_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/mz_share_view_title" android:singleLine="true" android:includeFontPadding="false" android:fontFamily="sans-serif-medium"/>
        <TextView android:textSize="12sp" android:textColor="#73000000" android:gravity="center" android:id="@+id/chooser_sub_title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:singleLine="true" android:includeFontPadding="false"/>
        <CheckBox android:textSize="14sp" android:gravity="center_vertical" android:layout_gravity="center_horizontal" android:id="@+id/chooser_check_box" android:paddingLeft="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/mz_share_view_checkbox_text" android:singleLine="true" android:includeFontPadding="false" android:paddingStart="8dp" style="@style/Widget.Flyme.ShareView.CheckBox"/>
    </LinearLayout>
    <FrameLayout android:id="@+id/chooser_scrollIndicatorUpContainer" android:layout_width="@dimen/chooser_dialog_width" android:layout_height="wrap_content">
        <View android:id="@+id/chooser_scrollIndicatorUp" android:background="#0d000000" android:visibility="gone" android:layout_width="@dimen/chooser_dialog_width" android:layout_height="2px"/>
    </FrameLayout>
    <com.meizu.share.widget.RectClipView android:layout_width="@dimen/chooser_dialog_width" android:layout_height="wrap_content" app:layout_share_listView="true">
        <flyme.support.v7.widget.RecyclerView android:id="@+id/chooser_list" android:layout_width="@dimen/chooser_dialog_width" android:layout_height="match_parent" android:overScrollMode="never"/>
    </com.meizu.share.widget.RectClipView>
    <FrameLayout android:id="@+id/chooser_scrollIndicatorDownContainer" android:layout_width="@dimen/chooser_dialog_width" android:layout_height="2px" android:layout_marginBottom="@dimen/chooser_dialog_button_height" app:layout_share_alignParentBottom="true">
        <View android:id="@+id/chooser_scrollIndicatorDown" android:background="#0d000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </FrameLayout>
    <Button android:textSize="16sp" android:gravity="center" android:id="@+id/chooser_btn_cancel" android:layout_width="@dimen/chooser_dialog_width" android:layout_height="@dimen/chooser_dialog_button_height" android:text="@string/mc_cancel" android:includeFontPadding="false" android:fontFamily="sans-serif-medium" android:stateListAnimator="@null" app:layout_share_alignParentBottom="true"/>
    <View android:id="@+id/chooser_btn_placeholder" android:background="@android:color/transparent" android:focusable="true" android:clickable="true" android:layout_width="@dimen/chooser_dialog_width" android:layout_height="@dimen/chooser_dialog_margin_bottom" app:layout_share_alignParentBottom="true" app:layout_share_ignoreParentPadding="true"/>
</com.meizu.share.widget.NestedScrollingLayout>
