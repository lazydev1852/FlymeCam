<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/fl_mz_barcode" android:tag="layout/mz_barcode_0" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
    <View android:id="@+id/mz_barcode_auto_cover_view" android:background="#80000000" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/mz_barcode_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <com.meizu.media.camera.views.GlowImageView android:id="@+id/mode_exit_control" android:background="?android:attr/selectableItemBackgroundBorderless" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/mz_ic_tab_mode_exit" android:scaleType="center" android:layout_centerHorizontal="true" android:contentDescription="@string/descp_mode_close"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/mz_barcode_result_layout" android:background="@android:color/black" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
            <RelativeLayout android:id="@+id/mz_barcode_info_exit_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/mz_barcode_info_exit_layout_height">
                <ImageView android:id="@+id/mz_barcode_info_exit_view" android:background="@drawable/barcode_result_exit_bg" android:layout_width="@dimen/mz_barcode_info_exit_view_width" android:layout_height="@dimen/mz_barcode_info_exit_view_height" android:layout_marginTop="@dimen/mz_barcode_info_exit_margin_top" android:layout_marginBottom="@dimen/mz_barcode_info_exit_margin_top" android:src="@drawable/mz_barcode_info_close" android:scaleType="center" android:layout_marginStart="@dimen/mz_barcode_info_exit_margin_left" android:layout_alignParentStart="true"/>
                <ImageView android:background="@color/mz_barcode_divider" android:layout_width="match_parent" android:layout_height="@dimen/mz_barcode_devider" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/mz_barcode_info_header" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/mz_barcode_header_height">
                <com.meizu.media.camera.views.FixedSizeImageView android:gravity="center" android:id="@+id/header_image" android:layout_width="@dimen/mz_barcode_header_icon_height" android:layout_height="@dimen/mz_barcode_header_icon_height" android:layout_centerVertical="true" android:layout_marginStart="@dimen/mz_barcode_header_icon_margin" android:layout_marginEnd="@dimen/mz_barcode_header_icon_margin" android:layout_alignParentStart="true"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/header_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_marginEnd="@dimen/mz_barcode_header_content_margin" android:layout_toStartOf="@+id/header_price" android:layout_toEndOf="@+id/header_image">
                    <TextView android:textSize="@dimen/mz_font_size_16sp" android:textColor="@color/mz_barcode_white" android:id="@+id/header_content_main" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:fontFamily="sans-serif-medium"/>
                    <TextView android:textSize="@dimen/mz_font_size_12sp" android:textColor="@color/mz_barcode_gray" android:id="@+id/header_content_extra" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mz_barcode_header_content_margin" android:maxLines="2"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/header_price" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerVertical="true" android:layout_alignParentEnd="true">
                    <TextView android:textSize="@dimen/mz_font_size_20sp" android:textColor="@color/mz_barcode_result_button_text" android:gravity="end" android:layout_gravity="end" android:id="@+id/header_content_sub" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:fontFamily="sans-serif-medium" android:layout_marginEnd="@dimen/mz_barcode_header_icon_margin"/>
                    <TextView android:textSize="@dimen/mz_font_size_12sp" android:textColor="@color/mz_barcode_gray" android:gravity="end" android:layout_gravity="end" android:id="@+id/header_content_sub_extra" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/mz_barcode_header_price_extra_margin_top" android:layout_marginEnd="@dimen/mz_barcode_header_icon_margin"/>
                </LinearLayout>
                <ImageView android:id="@+id/header_divider" android:background="@color/mz_barcode_divider" android:layout_width="match_parent" android:layout_height="@dimen/mz_barcode_devider" android:layout_alignParentBottom="true" android:layout_marginStart="@dimen/mz_barcode_header_icon_margin" android:layout_marginEnd="@dimen/mz_barcode_list_margin_right"/>
            </RelativeLayout>
            <com.meizu.media.camera.views.MzBarcodeListview android:id="@+id/mz_barcode_info_list" android:visibility="gone" android:scrollbars="none" android:clickable="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:listSelector="@android:color/transparent" android:overScrollMode="ifContentScrolls" android:paddingStart="@dimen/mz_barcode_list_margin_left" android:paddingEnd="@dimen/mz_barcode_list_margin_right"/>
            <ImageView android:id="@+id/mz_barcode_list_divider_bottom" android:background="@color/mz_barcode_divider" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/mz_barcode_devider"/>
            <LinearLayout android:gravity="center_vertical" android:layout_gravity="bottom" android:id="@+id/mz_barcode_smartbar" android:visibility="invisible" android:layout_height="@dimen/mz_barcode_smartbar_height" style="@style/MzSmartBar">
                <com.meizu.media.camera.views.GlowImageView android:id="@+id/barcode_second" android:background="@drawable/barcode_result_actionbar_bg" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="center" android:layout_weight="1" app:isPort="true"/>
                <com.meizu.media.camera.views.GlowImageView android:id="@+id/barcode_third" android:background="@drawable/barcode_result_actionbar_bg" android:layout_width="0dp" android:layout_height="match_parent" android:scaleType="center" android:layout_weight="1" app:isPort="true"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/mz_barcode_flash_tip_layout" android:paddingTop="30dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:paddingStart="30dp" android:paddingEnd="30dp">
            <ImageView android:id="@+id/mz_barcode_flash_tip_icon" android:layout_width="@dimen/mz_barcode_flash_tip_height" android:layout_height="@dimen/mz_barcode_flash_tip_height"/>
            <TextView android:textSize="@dimen/mz_font_size_12sp" android:textColor="@android:color/white" android:id="@+id/mz_barcode_flash_tip_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/mz_bar_code_flash_tip"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/mz_barcode_auto_result_hint" android:background="@drawable/barcode_hint_bg" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="wrap_content" android:layout_height="@dimen/mz_barcode_mode_auto_hint_height" android:layout_centerHorizontal="true">
            <ImageView android:layout_gravity="center" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/mz_barcode_in_auto_result_hint" android:layout_marginStart="5dp"/>
            <TextView android:textSize="@dimen/mz_font_size_13sp" android:textColor="@color/white" android:gravity="left|center_vertical|center_horizontal|center|start" android:layout_gravity="center" android:id="@+id/mz_barcode_result_type_hint" android:layout_width="wrap_content" android:layout_height="match_parent" android:shadowColor="@color/mz_screen_hint_shadow_color" android:shadowDx="0" android:shadowDy="2" android:shadowRadius="3" android:fontFamily="sans-serif-medium" android:layout_marginEnd="13dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
